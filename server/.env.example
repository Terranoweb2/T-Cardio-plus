# Configuration du serveur T-Cardio
# Copier ce fichier vers .env et modifier les valeurs selon vos besoins

# Port du serveur
PORT=3001

# Chemin vers la base de données SQLite
DB_PATH=./database/t-cardio.db

# Clé secrète pour JWT (CHANGER EN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Origine CORS autorisée (frontend)
CORS_ORIGIN=http://localhost:5173

# Environnement
NODE_ENV=development

# Configuration de sécurité
BCRYPT_ROUNDS=12

# Configuration de session
SESSION_TIMEOUT=24h

# Configuration de la base de données
DB_TIMEOUT=30000
DB_CACHE_SIZE=2000

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/t-cardio.log

# Limites de taux (rate limiting)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Taille maximale des fichiers uploadés (en MB)
MAX_FILE_SIZE=10

# Configuration email (pour notifications futures)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@t-cardio.app

# Configuration de sauvegarde
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
