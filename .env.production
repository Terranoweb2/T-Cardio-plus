# Configuration de production T-Cardio
NODE_ENV=production
PORT=3001

# Base de données SQLite
DB_PATH=./database/t-cardio.db

# JWT Secret (sera remplacé par une variable d'environnement Railway)
JWT_SECRET=tcardio-production-secret-2025-change-this

# CORS - Permettre toutes les origines en production
CORS_ORIGIN=*

# Configuration de sécurité
BCRYPT_ROUNDS=12

# Logs
LOG_LEVEL=info
